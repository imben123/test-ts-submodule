    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "es2021"
    ],
    "sourceMap": true,
    "outDir": "build"
  },
  "include": ["**/*.ts"]
}
